generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id String @id @default(uuid())@unique
  name String
  email String @unique
  password String
  room Rooms[]
}
 model Rooms{
  id String @id @default(uuid())
  name String
  price String
  location String 
  images String[]
  ownerId String 
  user User @relation(fields: [ownerId],references: [id]) 
 }
